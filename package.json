{
  "name": "daraz-label-printing",
  "productName": "Daraz Label Printing",
  "version": "1.1.0",
  "description": "Professional tool to separate and combine order invoices and labels from PDF to save printing cost.",
  "private": true,
  "author": "Syed Jamal",
  "keywords": [
    "daraz",
    "sellercenter",
    "daraz label",
    "shipping label"
  ],
  "main": "src/main/main.js",
  "homepage": "./",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "electron-is-dev": "^2.0.0",
    "pdfjs-dist": "^3.11.174",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.5",
    "react-router-dom": "^6.28.0",
    "react-scripts": "5.0.1",
    "smalltalk": "^4.1.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm run electron:start\"",
    "electron:start": "wait-on http://127.0.0.1:3000 && electron .",
    "electron:build": "npm run build && electron-builder --win --x64"
  },
  "build": {
    "appId": "com.smjwsb.daraz-label-printing",
    "productName": "Daraz Label Printing",
    "files": [
      "build/**/*",
      "src/main/**/*",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "src/main/main.js"
    },
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": "portable",
      "icon": "icons/icon.ico"
    }
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^23.3.13",
    "electron-builder": "^23.6.0",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
